#include <iostream>
using namespace std;

class Obiekt
{
private:
    int x;
public:
    Obiekt(int x) : x(x) {}
    friend void zmiana_x(Obiekt & o, int new_x);
    void pokaz_x()
    {
        cout << "Wartosc zmiennej x: " << x << endl;
    }
};

void zmiana_x(Obiekt & o, int new_x)
{
    o.x = new_x;
}

int main()
{
    Obiekt Obj(5);
    Obj.pokaz_x();
    zmiana_x(Obj, 10);
    Obj.pokaz_x();

    return 0;
}
